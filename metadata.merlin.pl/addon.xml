<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.merlin.pl"
       name="Merlin.pl"
       version="1.0.1"
       provider-name="smuto">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.last.fm" version="1.0"/>
    <import addon="metadata.common.allmusic.com" version="1.0"/>
    <import addon="metadata.common.htbackdrops.com" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.albums"
             language="pl"
             library="merlin.xml"/>
  <extension point="xbmc.metadata.scraper.artists"
             language="pl"
             library="merlin.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Merlin.pl Music scraper</summary>
    <summary lang="kr">Merlin.pl 음악 스크래퍼</summary>
    <description lang="en">Merlin.pl scraper. Also uses info from last.fm and allmusic.com</description>
    <description lang="kr">Merlin.pl 에서 음악 정보 다운로드 (last.fm 과 allmusic.com 정보 이용)</description>
    <platform>all</platform>
  </extension>
</addon>
