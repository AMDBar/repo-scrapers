<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.filmbasen.dagbladet.no"
       name="FilmBasen"
       version="1.0.0"
       provider-name="spiff">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.movies"
             language="no"
             library="filmbasen.xml"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Filmbasen Movie Scraper</summary>
    <summary lang="kr">Filmbasen 영화 스크래퍼</summary>
    <description lang="en">Download Movie information from filmbasen, Dagbladet's film database</description>
    <description lang="kr"> filmbasen, Dagbladet's film 에서 영화 정보 다운로드</description>
    <description lang="no">Last ned filminformasjon fra Filmbasen (Dagbladet)</description>
  </extension>
</addon>
