<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.cinefacts.de"
       name="Cinefacts"
       version="1.0.2"
       provider-name="Team XBMC + schenk">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.movies"
             language="de"
             library="cinefacts.xml"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Cinefacts.de Movie Scraper</summary>
    <summary lang="kr">Cinefacts.de 영화 스크래퍼</summary>
    <summary lang="se">Cinefacts.de Filmskrapa</summary>
    <summary lang="nl">Cinefacts.de Film Scraper</summary>
    <description lang="en">Download Movie information from www.cinefacts.de</description>
    <description lang="kr">www.cinefacts.de 에서 영화 정보 다운로드</description>
    <description lang="se">Ladda ner filminformation från www.cinefacts.de</description>
    <description lang="nl">Download film informatie van www.cinefacts.de</description>
  </extension>
</addon>
