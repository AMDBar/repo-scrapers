<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.movieplayer.it"
       name="MoviePlayer.it"
       version="1.0.0"
       provider-name="KoTiX">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper"
             language="it"
             library="movieplayer.xml"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <minversion>20000</minversion>
    <summary lang="en">MoviePlayer Movie Scraper</summary>
    <summary lang="kr">MoviePlayer 영화 스크래퍼</summary>
    <description lang="en">Download Movie information from www.movieplayer.it</description>
    <description lang="kr">www.movieplayer.it 에서 영화 정보 다운로드</description>
    <supportedcontent>
      <content>movies</content>
    </supportedcontent>
  </extension>
</addon>
