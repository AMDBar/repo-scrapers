<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.worldart.ru"
       name="WorldArt"
       version="1.0.0"
       provider-name="hamp">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0"/>
    <import addon="metadata.common.imdb.com" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper"
             library="worldart.xml"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <minversion>20000</minversion>
    <summary lang="en">WorldArt Movie Scraper</summary>
    <summary lang="kr">WorldArt 영화 스크래퍼</summary>
    <description lang="en">Download Movie information from www.worldart.ru</description>
    <description lang="kr">www.worldart.ru에서 영화 정보 다운로드</description>
    <supportedcontent>
      <content>movies</content>
    </supportedcontent>
  </extension>
</addon>
