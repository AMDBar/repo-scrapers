<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.albums.yoyo.pl"
       name="YoYo.pl"
       version="1.0.1"
       provider-name="smuto">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.allmusic.com" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.albums"
             language="pl"
             library="yoyo.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">YoYo Album scraper</summary>
    <summary lang="pl">YoYo Album scraper</summary>
    <description lang="en">MusicBrainz scraper. Also uses info from merlin.pl and allmusic.com</description>
    <description lang="pl">MusicBrainz scraper. Album - wyszukiwanie i pobranie listy utworów na bazie MusicBrainz, opis i okłdka z merlin.pl (okładka domyślnie), generalne info z allmusic, okładka w opcjach.</description>
    <platform>all</platform>
  </extension>
</addon>
