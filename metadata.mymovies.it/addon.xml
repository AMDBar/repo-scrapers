<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.mymovies.it"
       name="My Movies.it"
       version="1.0.0"
       provider-name="muttley">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper"
             library="mymovies.xml"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <minversion>20000</minversion>
    <summary lang="en">MyMovies.it Movie Scraper</summary>
    <summary lang="kr">MyMovies.it 영화 스크래퍼</summary>
    <description lang="en">Download Movie information from www.mymovies.it</description>
    <description lang="kr">MyMovies.it 에서 영화 정보 다운로드</description>
    <supportedcontent>
      <content>movies</content>
    </supportedcontent>
  </extension>
</addon>
