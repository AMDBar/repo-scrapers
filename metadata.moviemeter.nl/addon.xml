<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.moviemeter.nl"
       name="MovieMeter"
       version="1.0.0"
       provider-name="The_Ghost16">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0"/>
    <import addon="metadata.common.movieposterdb.com" version="1.0"/>
    <import addon="metadata.common.imdb.com" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper"
             language="nl"
             library="moviemeter.xml"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <minversion>20000</minversion>
    <summary lang="en">MovieMeter Movie Scraper</summary>
    <summary lang="kr">MovieMeter 영화 스크래퍼</summary>
    <description lang="en">Download Movie information from www.moviemeter.nl</description>
    <description lang="kr">www.moviemeter.nl 에서 영화 정보 다운로드</description>
    <supportedcontent>
      <content>movies</content>
    </supportedcontent>
  </extension>
</addon>
